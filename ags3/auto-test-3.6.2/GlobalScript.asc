function unhandled_event(int what, int type)
{
  if (what == 1) // Unhandled events for HOTSPOTS
  {
    if (type == 1) // look
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Lookat";
    }
    else if (type == 2) // interact
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Interact";
    }
    else if (type == 3) // use inv on
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Useinv";
    }
    else if (type == 4) // talk to
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Talkto";
    }
    else if (type == 7) // pickup
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Pickup";
    }
    else if (type == 8) // mode8
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Mode8";
    }
    else if (type == 9) // mode9
    {
      LastUnhandledEvent = "Hotspot.Unhandled.Mode9";
    }
  }
  else if (what == 2) // Unhandled events for OBJECTS
  {
    if (type == 0) // look
    {
      LastUnhandledEvent = "Object.Unhandled.Lookat";
    }
    else if (type == 1) // interact
    {
      LastUnhandledEvent = "Object.Unhandled.Interact";
    }
    else if (type == 2) // talk to
    {
      LastUnhandledEvent = "Object.Unhandled.Talkto";
    }
    else if (type == 3) // use inv on
    {
      LastUnhandledEvent = "Object.Unhandled.Useinv";
    }
    else if (type == 5) // pick up
    {
      LastUnhandledEvent = "Object.Unhandled.Pickup";
    }
    else if (type == 6) // mode8
    {
      LastUnhandledEvent = "Object.Unhandled.Mode8";
    }
    else if (type == 7) // mode9
    {
      LastUnhandledEvent = "Object.Unhandled.Mode9";
    }
  }
  else if (what == 3) // Unhandled events for CHARACTERS
  {
    if (type == 0) // look
    {
      LastUnhandledEvent = "Character.Unhandled.Lookat";
    }
    else if (type == 1) // interact
    {
      LastUnhandledEvent = "Character.Unhandled.Interact";
    }
    else if (type == 2) // talk to
    {
      LastUnhandledEvent = "Character.Unhandled.Talkto";
    }
    else if (type == 3) // use inv on
    {
      LastUnhandledEvent = "Character.Unhandled.Useinv";
    }
    else if (type == 5) // pickup
    {
      LastUnhandledEvent = "Character.Unhandled.Pickup";
    }
    else if (type == 6) // mode8
    {
      LastUnhandledEvent = "Character.Unhandled.Mode8";
    }
    else if (type == 7) // mode9
    {
      LastUnhandledEvent = "Character.Unhandled.Mode9";
    }
  }
  else if (what == 5) // Unhandled events for INVENTORY ITEMS
  {
    if (type == 0) // look
    {
      LastUnhandledEvent = "InvItem.Unhandled.Lookat";
    }
    else if (type == 1) // interact
    {
      LastUnhandledEvent = "InvItem.Unhandled.Interact";
    }
    else if (type == 2) // talk to
    {
      LastUnhandledEvent = "InvItem.Unhandled.Talkto";
    }
    else if (type == 3) // use inv on
    {
      LastUnhandledEvent = "InvItem.Unhandled.Useinv";
    }
    else if (type == 4) // other click
    {
      LastUnhandledEvent = "InvItem.Unhandled.OtherClick";
    }
  }
}
