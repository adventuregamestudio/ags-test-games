// This room runs the stage 1 tests

function room_AfterFadeIn()
{
  BeginTests();
  RunStage1Tests();
}

int DelayedTestCounter;
function room_RepExec()
{
  DelayedTestCounter = RunStage1DelayedTests(DelayedTestCounter);
  if (DelayedTestCounter < 0)
  {
    FinishTests();
  }
}

